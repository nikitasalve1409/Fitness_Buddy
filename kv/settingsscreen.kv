<SettingsScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex('#39B3F2')
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        Label:
            id: friend_id_label
            text: "Friend ID: "
            size_hint: 1, .1
            pos_hint: {"top": 1, "left": 1}

        ImageButton:
            size_hint: .5, .2
            pos_hint: {"top": .7, "left": 1}
            source: "icons/avatars/Boy1.png"
            on_release:
                app.change_screen("change_avatars_screen")

        Label:
            size_hint: .3, .2
            pos_hint: {"top": .7, "right": .8}
            text:"Change Avatar"


        ImageButton:
            size_hint: .5, .2
            pos_hint: {"top": .5, "left": 1}
            source: "icons/add.png"
            on_release:
                print("Add friend")

        Label:
            size_hint: .3, .2
            pos_hint: {"top": .5, "right": .8}






